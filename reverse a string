public class Main
{
    public static void reverse(String str,int i)
    {
        if(i==0)
        {
          
          System.out.print(str.charAt(i));
          return;
        }
        System.out.print(str.charAt(i));
        reverse(str,i-1);
    }
	public static void main(String[] args) {
       String str="Hello";
       reverse(str,str.length()-1);
	}
}
